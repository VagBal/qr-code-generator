{
  "version": 2,
  "builds": [
    {
      "src": "qrcodegen/app.py",
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "15mb" }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "qrcodegen/app.py"
    }
  ],
  "build": {
    "env": {
      "PIP_NO_BINARY": "Pillow"
    },
    "commands": [
      "apt-get update && apt-get install -y libjpeg62-turbo libfreetype6"
    ]
  }
}
